    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) launch ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tracer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "(lldb) launch ",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tracer",
            "args": ["--input=scenes/bunny/bunny.json", "--threads=1"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        }
    ]
}